  <div class="activities">
    <div class="container-activities">
      <div class="banner-activities">
         <h1>Une autre vision de la médecine avec Parallel</h1>
          <%= render 'shared/searchbaractivities' %>
      </div>

      <div class="info-activities">
        <p>Besoin d'être guidé sur le choix de la pratique ?</p>
      </div>
      <div class="info-activities-2">
        <p>Découvres nos 5 pratiques corps-esprit </p>
      </div>

      <div class=boutons-activities>
        <% i = 1 %>
        <% @activities.each do |activity| %>
          <%= link_to activity.name, activity_path(activity), class: "btn-activities btn-#{i}"  %>
          <% i += 1 %>
        <% end %>
      </div>
    </div>
  </div>
